{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/google/search-console/recommendations.js": {
      "maxDuration": 60
    },
    "api/google/ads/search-volume.js": {
      "maxDuration": 60
    },
    "api/audit/run.js": {
      "maxDuration": 60
    },
    "api/audit/sitemap.js": {
      "maxDuration": 60
    },
    "api/advertising/generate.js": {
      "maxDuration": 60
    },
    "api/audit/run-batch.js": {
      "maxDuration": 60
    },
    "api/audit/run-multi.js": {
      "maxDuration": 120
    },
    "api/audit/run-ad-audit.js": {
      "maxDuration": 60
    },
    "api/blog/detect.js": {
      "maxDuration": 30
    },
    "api/blog/audit.js": {
      "maxDuration": 120
    },
    "api/blog/opportunities.js": {
      "maxDuration": 60
    },
    "api/blog/generate.js": {
      "maxDuration": 120
    },
    "api/build/crawl.js": {
      "maxDuration": 30
    },
    "api/build/rebuild.js": {
      "maxDuration": 120
    },
    "api/build/suggest-pages.js": {
      "maxDuration": 60
    },
    "api/build/create-page.js": {
      "maxDuration": 120
    },
    "api/build/modify-page.js": {
      "maxDuration": 120
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/((?!api|assets|seauto-logo).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
